    <children>
        <VBox alignment="TOP_RIGHT">
            <children>
                <Button mnemonicParsing="false">
                    <font>
                        <Font size="11.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <Label alignment="CENTER" cache="true" contentDisplay="CENTER" graphicTextGap="60.0" text="Settings" textAlignment="CENTER">
            <font>
                <Font size="65.0" />
            </font>
            <padding>
