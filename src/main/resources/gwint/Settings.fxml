        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
                <Label text="Music Volume">
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
                <Slider fx:id="musicVolumeSlider" minorTickCount="10" prefHeight="60.0" prefWidth="400.0" scaleX="0.75" scaleY="0.75" scaleZ="0.75">
               </Slider>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
            <children>
                <Label text="Game Volume">
                    <font>
                        <Font size="26.0" />
                    </font>
                </Label>
                <Slider fx:id="effectsVolumeSlider" minorTickCount="10" prefHeight="60.0" prefWidth="400.0" scaleX="0.75" scaleY="0.75" scaleZ="0.75">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Slider>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
