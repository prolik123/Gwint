                <Button onAction="#handleExitSettingsButtonAction" onMouseEntered="#handleEntered" onMouseExited="#handleExited" prefHeight="87.0" prefWidth="241.0" style="-fx-font-family: 'MedievalSharp'; -fx-font-size:2.50em;" text="Exit">
                </Button>
            </children>
        </HBox>
    </children>
    <stylesheets>
        <URL value="@MainMenu.css" />
    </stylesheets>
